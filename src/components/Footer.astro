---
import { EMAIL, TELPHONE_READBLE, TELPHONE_LINKEABLE, INSTAGRAM, LINKEDIN } from 'astro:env/client';
import Envelope from '@/icones/Email.astro';
import Phone from '@/icones/Phone.astro';
---
<footer class="bg-gris-cemento sm:py-20 py-16">
    <section class="flex items-center justify-center">
        <div class="container mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 text-center text-white">
            <div class="flex justify-center sm:justify-start lg:justify-center items-center">
                <img
                    src="/images/logos/logo-vodem-horizontal.svg"
                    class="w-56 sm:w-40 lg:w-56 h-auto aspect-224/60"
                    alt="logo de vodem"
                    loading="lazy"
                />
            </div>
            <div class="max-sm:mt-6">
                <div class="flex justify-center sm:justify-between">
                    <svg class="h-20 lg:h-28 max-lg:hidden" data-name="Capa 2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 4.37 107"><path style="fill:#f6ca0f" d="M0 0h4.37v107H0z" data-name="Capa 1"/></svg>
                    <ul class="text-lg lg:text-lg xl:text-xl font-medium text-center sm:text-left">
                        <li class="inline-flex"><a class="hover:text-amarillo inline-flex items-center mr-2" href=`tel:${TELPHONE_LINKEABLE}` target="_blank"><Phone extraClass='mr-2 h-8 w-8'/>{TELPHONE_READBLE}</a> | <a class="hover:text-amarillo ml-2" href="/contacto">Contacto</a></li>
                        <li><a class="hover:text-amarillo inline-flex items-center" href=`mailto:${EMAIL}` target="_blank"><Envelope extraClass='mr-2 h-8 w-8'/>{EMAIL}</a></li>
                        <li></li>
                        <li><a class="hover:text-amarillo" href="/politica-reclamos">Política de reclamos y quejas</a></li>
                    </ul>
                    <svg class="h-20 lg:h-28 max-lg:hidden" data-name="Capa 2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 4.37 107"><path style="fill:#f6ca0f" d="M0 0h4.37v107H0z" data-name="Capa 1"/></svg>
                </div>
            </div>
            <div class="flex justify-center sm:justify-start lg:justify-center items-center sm:max-lg:col-span-2 max-lg:mt-6">
                <div class="flex justify-center items-center">
                    <p class="text-lg md:text-xl lg:text-2xl font-medium mr-3">Seguinos en</p>
                    <a href={INSTAGRAM} target="_blank" class="group" rel="noreferrer noopener">
